<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimaryLight"
              android:layout_marginTop="1dp"
              android:id="@+id/layout_root">

    <TextView
            android:layout_margin="@dimen/distance_items"
            android:text="@string/n"
            style="@style/textHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView_number" android:layout_weight="1"
    />
    <TextView
            android:layout_margin="@dimen/distance_items"
            android:text="@string/amount"
            style="@style/textHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView_amount" android:layout_weight="1"
    />
    <TextView
            android:layout_margin="@dimen/distance_items"
            android:text="@string/currency"
            style="@style/textHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView_currency" android:layout_weight="1"/>
</LinearLayout>